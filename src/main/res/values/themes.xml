<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstTest" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#339cec</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="statusBarBackground">@color/purple_200</item>
        <item name="statusBarForeground">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">#ff0000</item>
        <!-- Status bar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!-- Text -->
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">15sp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
</resources>